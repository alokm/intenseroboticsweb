---
import Layout from '../layouts/Layout.astro';
import HeroQuote from '../components/HeroQuote.astro'
---

<Layout title="Welcome to Intense Robotics">
		<h1>Welcome to <br/>
		<span class="text-gradient text-4xl">Intense Robotics</span></h1>
		<p>
			Introducing the future of <strong>robotic hands</strong>.
		</p>
</Layout>

<style>
	.text-gradient {
		background-image: linear-gradient(
			45deg,
			blue,
			yellow 30%,
			white 60%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
